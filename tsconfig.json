{
  "compilerOptions": {
    "target": "es6",   
    "outDir": "dist",                                   
    "module": "es6",    
    "moduleResolution": "node",
    "allowJs": true,                                                          
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
}
